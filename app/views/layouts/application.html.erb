<!DOCTYPE html>
<html>
  <head>
    <title>HairBnb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;500;700&family=Roboto:wght@100;400;700&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

<!-- class="<#% 'img-sign-in-test' if controller_name == 'sessions' && action_name == 'new' %>" -->
  <body >
    <% if user_signed_in? %>
      <%= render "shared/navbar_when_sign_in" %>
    <% else %>
      <%= render "shared/navbar_when_not_sign_in" %>
    <% end %>

    <%= render 'shared/flashes' %>
    <%= yield %>

    <div id="my-footer">
      <ul class="list-inline">
        <li><a href="#"><i class="fab fa-facebook"></i></a></li>
        <li><a href="#"><i class="fab fa-instagram"></i></li>
        <li><a href="#"><i class="fab fa-twitter-square"></i></li>
        <li><a href="#"><i class="fab fa-youtube"></i></li>
      </ul>
    </div>
    </div>
  </body>
</html>
