<div class="container-global">
  <%= simple_form_for :hair, url: hairs_path, method: :get do |f| %>
    <div class="bar_recherche flex">
      <%= f.input :nature,  placeholder: 'Quel type de cheveux souhaitez vous ?', label: "NATURE" %>
      <%= f.input :color,  placeholder: 'Quel couleur souhaitez vous ?', label: "COULEUR" %>
      <%= f.button :submit, "Rechercher", class: "btn-1" %>
    </div>
  <% end %>

  <% if params[:hair].present? %>
    <% if @hairs.empty? %>
      <h3 class="oups border-t-gris">üò¨ Oups, il n'y a pas de r√©sultats √† votre recherche</h3>
      <%= link_to "Retour au menu principal", hairs_path, class: "btn-2 deco-none margin-l-20" %>
    <% else %>
      <div class="hair-card border-t-gris">
        <h3>R√©sultats de votre recherche</h3>
        <div class="scroll">
          <% @hairs.each do |hair| %>
              <%= render "shared/hair-card", hair: hair %>
            <% end %>
        </div>
        <%= link_to "Retour au menu principal", hairs_path, class: "btn-2 deco-none margin-t-20" %>
      </div>
    <% end %>
  <% else %>
    <div class="border-t-gris color-card">
      <h2>Avec Hairbnb, fini la calvitie </h2>
      <div class="flex">
        <% @hair_colors.each do |color| %>
          <%= render "shared/color_hair_card", color: color %>
        <% end %>
      </div>
    </div>
    <div class="top-card">
      <h2>Les meilleurs cheveulures</h2>
      <h3 id="h3">D√©couvrez une s√©lection des chevelures les mieux not√©es dans le monde</h3>
      <div class="scroll">
        <% @hairs.each do |hair| %>
          <%= render "shared/top_hair_card", hair: hair %>
        <% end %>
      </div>
    </div>
    <div class="hair-card">
      <h3>Classement par dates de mise en ligne</h3>
      <div class="scroll">
        <% @hairs.each do |hair| %>
          <%= render "shared/hair-card", hair: hair %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
